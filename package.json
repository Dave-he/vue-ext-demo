{
  "name": "vue-ts-browser-extension",
  "version": "1.0.0",
  "description": "Vue + TypeScript Browser Extension with Vite",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && node scripts/copy-manifest.js && node scripts/patch-dist.js && node scripts/generate-icons.js",
    "preview": "vite preview",
    "clean": "rimraf dist",
    "verify": "node scripts/verify-build.js"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "pinia": "^2.1.7",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.269",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/tsconfig": "^0.5.1",
    "@vueuse/core": "^10.9.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2",
    "vite": "^5.0.10",
    "vue-tsc": "^1.8.25"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "rollup"
      ]
    }
  }
}